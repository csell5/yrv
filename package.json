{
  "name": "yrv",
  "version": "0.0.0",
  "description": "Your routing bro!",
  "main": "dist/yrv.js",
  "svelte": "src/main.js",
  "module": "dist/yrv.es.js",
  "browser": "dist/yrv.min.js",
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pateketrueke/yrv/issues"
  },
  "homepage": "https://github.com/pateketrueke/yrv",
  "files": [
    "src/**",
    "dist/*"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "serve": "sirv start tests/public --dev --quiet --single --port 8080",
    "lint": "eslint src tests",
    "prepublishOnly": "npm run test && NODE_ENV=production npm run build",
    "pretest": "NODE_ENV=test npm run build",
    "test": "npm run test:e2e -- ${BROWSER:-chrome} -a 'npm run serve' tests/cases",
    "test:e2e": "BASE_URL=http://localhost:8080 testcafe",
    "test:e2e:ci": "npm run test:e2e -- --ports 9505,9506 remote:1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pateketrueke/yrv.git"
  },
  "keywords": [
    "nested",
    "router",
    "svelte",
    "svelte3"
  ],
  "peerDependencies": {
    "svelte": "3.x"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-utils": ">=1.4.1",
    "rollup": "^1.14.4",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.0.0",
    "sirv-cli": "^0.4.4",
    "svelte": "^3.4.4",
    "testcafe": "^1.5.0"
  },
  "dependencies": {
    "abstract-nested-router": "^0.1.3"
  }
}
